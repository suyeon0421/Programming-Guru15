<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCE7"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    tools:context=".activity.PetInfoActivity"> <TextView
    android:id="@+id/tv_signup_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:fontFamily="@font/pretendard_semibold"
    android:text="회원가입"
    android:textColor="#121212"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/tv_signup_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_signup_title" />

    <TextView
        android:id="@+id/tv_pet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:bufferType="spannable"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="left"
        android:text="반려견 정보를 \n입력해주세요."
        android:textColor="#121212"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signup_title" />



    <TextView
        android:id="@+id/label_pet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="이름"
        android:textColor="#80858D"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pet_title" />

    <EditText
        android:id="@+id/edit_pet_name"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#F4F4F4"
        android:fontFamily="@font/pretendard_regular"
        android:hint="이름"
        android:inputType="text"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#C5C5C7"
        android:textColorHint="#C5C5C7"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_pet_name" />

    <TextView
        android:id="@+id/label_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="생년월일"
        android:textColor="#80858D"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_pet_name" />

    <EditText
        android:id="@+id/edit_pet_birth"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#F4F4F4"
        android:fontFamily="@font/pretendard_regular"
        android:hint="YYYY-MM-DD"
        android:inputType="date"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#80858D"
        android:textColorHint="#80858D"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_birth" />

    <TextView
        android:id="@+id/label_weight_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="몸무게, 성별"
        android:textColor="#80858D"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_pet_birth" />

    <LinearLayout
        android:id="@+id/ll_weight_gender"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_weight_gender">

        <EditText
            android:id="@+id/edit_pet_weight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#F4F4F4"
            android:fontFamily="@font/pretendard_regular"
            android:hint="몸무게"
            android:inputType="numberDecimal"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:textColor="#80858D"
            android:textColorHint="#80858D"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kg"
            android:textColor="#121212"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"/>


        <RadioGroup
            android:id="@+id/rg_gender"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#F4F4F4"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:gravity="center"
                android:fontFamily="@font/pretendard_regular"
                android:text="남아"
                android:textColor="@drawable/selector_radio_text_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:gravity="center"
                android:fontFamily="@font/pretendard_regular"
                android:text="여아"
                android:textColor="@drawable/selector_radio_text_color"
                android:textSize="14sp" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/label_breed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="견종"
        android:textColor="#80858D"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_weight_gender" />

    <AutoCompleteTextView
        android:id="@+id/auto_breed"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#F4F4F4"
        android:fontFamily="@font/pretendard_medium"
        android:hint="견종"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#80858D"
        android:textColorHint="#80858D"
        android:textSize="14sp"
        android:drawableEnd="@drawable/ic_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_breed" />

    <TextView
        android:id="@+id/label_neuter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="중성화 여부"
        android:textColor="#80858D"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/auto_breed" />

    <RadioGroup
        android:id="@+id/rg_neuter"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_neuter">

        <RadioButton
            android:id="@+id/rb_neutered"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_button"
            android:button="@null"
            android:gravity="center"
            android:fontFamily="@font/pretendard_regular"
            android:text="예"
            android:textColor="@drawable/selector_radio_text_color"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_not_neutered"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_button"
            android:button="@null"
            android:gravity="center"
            android:fontFamily="@font/pretendard_regular"
            android:text="아니오"
            android:textColor="@drawable/selector_radio_text_color"
            android:textSize="14sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/label_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유형"
        android:textColor="#80858D"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/rg_neuter"
        app:layout_constraintStart_toStartOf="parent"/>

    <RadioGroup
        android:id="@+id/rg_type"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_type">

        <RadioButton
            android:id="@+id/rb_small"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_button"
            android:button="@null"
            android:gravity="center"
            android:text="소형견"
            android:textColor="@drawable/selector_radio_text_color"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_medium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/selector_radio_button"
            android:button="@null"
            android:gravity="center"
            android:text="중형견"
            android:textColor="@drawable/selector_radio_text_color"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_large"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/selector_radio_button"
            android:button="@null"
            android:gravity="center"
            android:text="대형견"
            android:textColor="@drawable/selector_radio_text_color"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="14sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_button"
        app:backgroundTint="#6CA1D9"
        android:fontFamily="@font/pretendard_semibold"
        android:text="다음"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_type" />


</androidx.constraintlayout.widget.ConstraintLayout>