<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9EA"
    android:padding="24dp">

    <!-- 상단 타이틀 -->
    <TextView
        android:id="@+id/tv_signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="회원가입"
        android:textColor="#121212"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 안내 텍스트 -->
    <TextView
        android:id="@+id/tv_pet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:bufferType="spannable"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="left"
        android:text="반려견 정보를 \n입력해주세요."
        android:textColor="#121212"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signup_title" />

    <!-- 이름 라벨 -->
    <TextView
        android:id="@+id/label_pet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="이름"
        android:textColor="#80858D"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pet_title" />

    <!--이름 입력 -->
    <EditText
        android:id="@+id/edit_pet_name"
        android:layout_width="333dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#F4F4F4"
        android:fontFamily="@font/pretendard_regular"
        android:hint="이름"
        android:inputType="text"
        android:padding="15dp"
        android:textColor="#121212"
        android:textColorHint="#ABABAB"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_pet_name"
        app:layout_constraintWidth_percent="0.94" />
    <!-- 생년월일 라벨 -->


    <TextView
        android:id="@+id/label_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="생년월일"
        android:textColor="#80858D"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_pet_name" />

    <!-- 생년월일 입력 -->

    <EditText
        android:id="@+id/edit_pet_birth"
        android:layout_width="333dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#F4F4F4"
        android:fontFamily="@font/pretendard_regular"
        android:hint="생년월일 (YYYY-MM-DD)"
        android:inputType="date"
        android:padding="15dp"
        android:textColor="#121212"
        android:textColorHint="#ABABAB"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_birth"
        app:layout_constraintWidth_percent="0.94" />

    <!-- 몸무게, 성별 라벨 -->
    <TextView
        android:id="@+id/label_weight_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="몸무게(kg), 성별"
        android:textColor="#80858D"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_pet_birth" />

    <!-- 몸무게, 성별 입력/선택 -->
    <LinearLayout
        android:id="@+id/ll_weight_gender"
        android:layout_width="348dp"
        android:layout_height="49dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_weight_gender"
        app:layout_constraintWidth_percent="0.94">

        <EditText
            android:id="@+id/edit_pet_weight"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="3"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#F4F4F4"
            android:fontFamily="@font/pretendard_regular"
            android:hint="몸무게"
            android:inputType="numberDecimal"
            android:padding="15dp"
            android:textColor="#121212"
            android:textColorHint="#ABABAB"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/rg_gender"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:buttonTint="#6CA1D9"
                android:fontFamily="@font/pretendard_regular"
                android:text="남아"
                android:textColor="#121212" />

            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:buttonTint="#6CA1D9"
                android:fontFamily="@font/pretendard_regular"
                android:text="여아"
                android:textColor="#121212" />
        </RadioGroup>
    </LinearLayout>

    <!-- 견종 라벨 -->
    <TextView
        android:id="@+id/label_breed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="견종"
        android:textColor="#80858D"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_weight_gender" />

    <!-- 견종 입력 (AutoCompleteTextView) -->
    <AutoCompleteTextView
        android:id="@+id/auto_breed"
        android:layout_width="333dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#F4F4F4"
        android:fontFamily="@font/pretendard_medium"
        android:hint="견종"
        android:padding="15dp"
        android:textColor="#121212"
        android:textColorHint="#ABABAB"
        android:textSize="14sp"
        android:drawableEnd="@drawable/ic_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_breed"
        app:layout_constraintWidth_percent="0.94" />

    <!-- 중성화 여부 라벨 -->
    <TextView
        android:id="@+id/label_neuter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="중성화 여부"
        android:textColor="#80858D"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/auto_breed" />

    <!-- 중성화 여부 선택 RadioGroup -->
    <RadioGroup
        android:id="@+id/rg_neuter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_neuter">

        <RadioButton
            android:id="@+id/rb_neutered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#6CA1D9"
            android:fontFamily="@font/pretendard_regular"
            android:text="예"
            android:textColor="#121212" />

        <RadioButton
            android:id="@+id/rb_not_neutered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:buttonTint="#6CA1D9"
            android:fontFamily="@font/pretendard_regular"
            android:text="아니오"
            android:textColor="#121212" />
    </RadioGroup>

    <!-- 유형 라벨 (소/중/대형 선택) -->
    <TextView
        android:id="@+id/label_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유형"
        android:textColor="#80858D"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/rg_neuter"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 유형 선택 RadioGroup -->
    <RadioGroup
        android:id="@+id/rg_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/label_type"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp">

        <RadioButton
            android:id="@+id/rb_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소형견"
            android:textColor="#121212"
            android:fontFamily="@font/pretendard_regular"
            android:buttonTint="#6CA1D9" />
        <RadioButton
            android:id="@+id/rb_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중형견"
            android:textColor="#121212"
            android:fontFamily="@font/pretendard_regular"
            android:buttonTint="#6CA1D9"
            android:layout_marginStart="16dp"/>
        <RadioButton
            android:id="@+id/rb_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대형견"
            android:textColor="#121212"
            android:fontFamily="@font/pretendard_regular"
            android:buttonTint="#6CA1D9"
            android:layout_marginStart="16dp"/>
    </RadioGroup>

    <!-- 다음 버튼 -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="333dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="560dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#6CA1D9"
        android:fontFamily="@font/pretendard_semibold"
        android:text="다음"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_signup_title"
        app:layout_constraintWidth_percent="0.94" />

    <!-- 나중에 등록하기 텍스트 -->
    <TextView
        android:id="@+id/btn_register_later"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/pretendard_semibold"
        android:gravity="center"
        android:text="나중에 등록하기"
        android:textColor="#C5C5C7"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_next"
        app:layout_constraintWidth_percent="0.94" />

</androidx.constraintlayout.widget.ConstraintLayout>
