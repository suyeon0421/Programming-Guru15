<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/image_map_thumbnail"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/text_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="서울 노원구 공릉동"
                android:textSize="16sp"
                android:textColor="#121212"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="쫑이 보호자님"
                android:textColor="#ABABAB"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp">

                <!-- 거리 -->
                <TextView
                    android:id="@+id/text_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="1.2km"
                    android:textSize="22sp"
                    android:textColor="#6CA1D9"
                    android:gravity="center"/>

                <!-- 선 -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="14dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="#EEEEEE" />

                <!-- 시간 -->
                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="34분"
                    android:textSize="20sp"
                    android:textColor="#6CA1D9"
                    android:gravity="center"/>
            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="4dp"
                app:singleLine="true"
                app:chipSpacing="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_tag1"
                    style="@style/ChipStyle.BlueFilled.ReadOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="여유로운" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_tag2"
                    style="@style/ChipStyle.DarkBlueFilled.ReadOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="평지 위주" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
