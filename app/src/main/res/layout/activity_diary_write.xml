<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="산책 결과"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tvCongrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:text="🎉 고생하셨어요!\n산책 결과는 다음과 같아요"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"/>


        <!-- 지도 캡처 이미지 -->
        <ImageView
            android:id="@+id/imageMapResult"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:weightSum="3">

            <!-- 거리 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/fugazone_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="거리"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- 산책 시간 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/fugazone_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="산책시간"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- 칼로리 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 kcal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/fugazone_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="칼로리"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>



        <!-- 산책 스타일 질문 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_extrabold"
            android:text="오늘 산책 스타일은 무엇인가요?"
            android:textSize="16sp"
            android:layout_marginTop="24dp"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:selectionRequired="true"
            app:singleSelection="true"
            map:chipSpacing="8dp">

            <com.google.android.material.chip.Chip
                style="@style/ChipStyle.BlueOutline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여유로운"
                android:checkable="true"/>
            <com.google.android.material.chip.Chip
                style="@style/ChipStyle.BlueOutline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일반함"
                android:checkable="true"/>
            <com.google.android.material.chip.Chip
                style="@style/ChipStyle.BlueOutline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조금은 힘듦"
                android:checkable="true"/>
            <com.google.android.material.chip.Chip
                style="@style/ChipStyle.BlueOutline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="탐색형"
                android:checkable="true"/>
        </com.google.android.material.chip.ChipGroup>

        <!-- 경로 상태 질문 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_extrabold"
            android:text="오늘 산책 경로는 어땠나요?"
            android:textSize="16sp"
            android:layout_marginTop="24dp"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            map:chipSpacing="8dp"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                style="@style/ChipStyle.DarkBlueOutline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평지 위주"
                android:checkable="true"/>
            <com.google.android.material.chip.Chip
                style="@style/ChipStyle.DarkBlueOutline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="잔디밭 있음"
                android:checkable="true"/>
            <com.google.android.material.chip.Chip
                style="@style/ChipStyle.DarkBlueOutline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="물길 있음"
                android:checkable="true"/>
            <com.google.android.material.chip.Chip
                style="@style/ChipStyle.DarkBlueOutline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오르막 있음"
                android:checkable="true"/>
        </com.google.android.material.chip.ChipGroup>

        <!-- 산책 기록 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_extrabold"
            android:text="오늘 산책에 대해 기록할 수 있어요"
            android:textSize="16sp"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/etMemo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:fontFamily="@font/pretendard_regular"
            android:hint="오래도록 기억될 오늘의 추억을 기록해주세요."
            android:textSize="12sp"
            android:padding="12dp"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnEndWalk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="#6CA1D9"
            android:background="@drawable/rounded_button"
            android:text="산책 끝내기"
            android:layout_marginTop="24dp"
            android:backgroundTint="#6CA1D9"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
