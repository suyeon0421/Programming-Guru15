<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="45dp"
    android:layout_height="50dp"
    android:padding="1dp">

    <TextView
        android:id="@+id/tvDay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="1"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:background="@drawable/calendar_day_background"
        android:gravity="end"
        android:paddingEnd="4dp" />

    <View
        android:id="@+id/dotEvent"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:background="@drawable/dot_background"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/tvDay"
        app:layout_constraintEnd_toEndOf="@+id/tvDay"
        app:layout_constraintBottom_toBottomOf="@+id/tvDay"
        app:layout_constraintTop_toTopOf="@+id/tvDay" />

</androidx.constraintlayout.widget.ConstraintLayout>
