<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/recommendTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천 산책로"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:padding="16dp" />

        <ImageView
            android:id="@+id/image_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:contentDescription="메인 이미지" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    >

                    <TextView
                        android:id="@+id/text_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="서울 노원구 공릉동"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#121212" />

                    <TextView
                        android:id="@+id/text_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="쫑이 보호자님"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="#ABABAB"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/text_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.2km"
                            android:fontFamily="@font/pretendard_medium"
                            android:textSize="36sp"
                            android:textColor="#6CA1D9"
                            android:gravity="center" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="14dp"
                            android:layout_marginHorizontal="8dp"
                            android:background="#EEEEEE" />

                        <TextView
                            android:id="@+id/text_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="34분"
                            android:fontFamily="@font/pretendard_medium"
                            android:textSize="36sp"
                            android:textColor="#6CA1D9"
                            android:gravity="center" />
                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="4dp"
                        app:singleLine="true"
                        app:chipSpacing="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_tag1"
                            style="@style/ChipStyle.BlueFilled.ReadOnly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="여유로운" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_tag2"
                            style="@style/ChipStyle.DarkBlueFilled.ReadOnly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="평지 위주" />
                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnEndWalk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="#6CA1D9"
            android:background="@drawable/rounded_button"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="산책 하러가기"
            android:backgroundTint="#6CA1D9"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_menu"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemIconSize="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
