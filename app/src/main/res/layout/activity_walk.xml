<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F6F1">

    <!-- Google Map Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="550dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 하단 패널 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_container"
        android:layout_width="0dp"
        android:layout_height="410dp"
        android:background="@drawable/bg_rounded_top"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@id/map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 타이머 텍스트 -->
        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fugazone_regular"
            android:gravity="center"
            android:layout_marginTop="40dp"
                android:text="00:00.00"
                android:textColor="#492C2A"
                android:textSize="60sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 산책시간 레이블 -->
            <TextView
                android:id="@+id/tv_walk_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="산책시간"
                android:textSize="16sp"
                android:textColor="#492C2A"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_timer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 속도/거리/칼로리 컨테이너 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/metrics_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/tv_walk_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 속도 -->
                <LinearLayout
                    android:id="@+id/speed_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/distance_container"
                    app:layout_constraintWidth_percent="0.33">

                    <TextView
                        android:id="@+id/tv_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0’00’’"
                        android:textSize="28sp"
                        android:textColor="#492C2A"
                        android:fontFamily="@font/fugazone_regular"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="속도(분/km)"
                        android:textSize="12sp"
                        android:textColor="#492C2A"
                        android:fontFamily="@font/pretendard_medium" />
                </LinearLayout>

                <!-- 거리 -->
                <LinearLayout
                    android:id="@+id/distance_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    app:layout_constraintStart_toEndOf="@id/speed_container"
                    app:layout_constraintEnd_toStartOf="@id/kcal_container"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintWidth_percent="0.33">

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00.00"
                        android:textSize="28sp"
                        android:textColor="#492C2A"
                        android:fontFamily="@font/fugazone_regular"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="거리"
                        android:textSize="12sp"
                        android:textColor="#492C2A"
                        android:fontFamily="@font/pretendard_medium" />
                </LinearLayout>

                <!-- 칼로리 -->
                <LinearLayout
                    android:id="@+id/kcal_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="0dp"
                    app:layout_constraintStart_toEndOf="@id/distance_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintWidth_percent="0.33">

                    <TextView
                        android:id="@+id/tv_kcal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 kcal"
                        android:textSize="28sp"
                        android:textColor="#492C2A"
                        android:fontFamily="@font/fugazone_regular"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="칼로리"
                        android:textSize="12sp"
                        android:textColor="#492C2A"
                        android:fontFamily="@font/pretendard_medium" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 산책 시작 버튼 -->
            <Button
                android:id="@+id/btn_start_walk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="산책 시작하기"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:backgroundTint="#6CA1D9"
                android:background="@drawable/rounded_button"
                android:padding="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/metrics_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
